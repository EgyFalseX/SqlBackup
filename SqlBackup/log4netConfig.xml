<log4net>
  <appender name="RemotingAppender" type="log4net.Appender.RemotingAppender" >
    <sink value="tcp://localhost:7070/LoggingSink" />
    <lossy value="false" />
    <bufferSize value="1" />
    <onlyFixPartialEventData value="true" />
  </appender>

  <appender name="LogFileAppender" type="log4net.Appender.FileAppender">
    <param name="File" value="Log4Net\L4N.txt" />
    <param name="AppendToFile" value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="Header" value="[Header]\r\n" />
      <param name="Footer" value="[Footer]\r\n" />
      <param name="ConversionPattern" value="%d [%t] %-5p %c %m%n" />
    </layout>
  </appender>

  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender" >
    <layout type="log4net.Layout.PatternLayout">
      <param name="Header" value="[Header]\r\n" />
      <param name="Footer" value="[Footer]\r\n" />
      <param name="ConversionPattern" value="%d [%t] %-5p %c %m%n" />
    </layout>
  </appender>

  <appender name="UdpAppender" type="log4net.Appender.UdpAppender">
    <remoteAddress value="localhost" />
    <remotePort value="7071" />
    <layout type="log4net.Layout.XmlLayoutSchemaLog4j" />
  </appender>

  <appender name="SmtpAppender" type="log4net.Appender.SmtpAppender">
    <to value="mohamed.aly.omer@gmail.com" />
    <to value="mohamed.omarbayoumy@eg.froneri.com" />
    <from value="mohamed.aly.omar@gmail.com" />
    <subject value="SqlBackup Crash log - %message" />
    <smtpHost value="smtp.gmail.com" />
    <authentication value="Basic" />
    <port value="587" />
    <username value="mohamed.aly.omar@gmail.com" />
    <password value="mohamedalyomar" />
    <bufferSize value="1" />
    <EnableSsl value="true"/>
    <lossy value="true" />
    <evaluator type="log4net.Core.LevelEvaluator">
      <threshold value="ERROR"/>
    </evaluator>
    <layout type="log4net.Layout.PatternLayout">
       <conversionPattern value="%level %date - %message%newline" /> 
      <param name="ConversionPattern" value="%-5p%d{ yyyy-MM-dd HH:mm:ss} â€“ [%thread] %m method:%method %n stacktrace:%stacktrace{5} %n type:%type %n line: %line %n" />
    </layout>
  </appender>
  <!-- Set root logger level to DEBUG and its only appender to A1 -->
  <root>
    <level value="DEBUG" />
    <appender-ref ref="UdpAppender" />
    <!--<appender-ref ref="RemotingAppender" />-->
    <appender-ref ref="LogFileAppender" />
    <appender-ref ref="SmtpAppender" />
  </root>
</log4net>